@page
@model ChangePaswordModel

<link rel="stylesheet" href="~/css/password.css" />

<div class="password-container">
    <h1>Change Password</h1>

    <form method="post" class="password-form">
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" id="changeEmail" />
            <span asp-validation-for="Input.Email" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" type="password" id="changePassword" />
            <span asp-validation-for="Input.Password" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" type="password" id="changeConfirmPassword" />
            <span asp-validation-for="Input.ConfirmPassword" class="validation-error"></span>
        </div>

        <button type="submit" class="password-button">Change Password</button>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error-message">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }
    </form>
</div>
