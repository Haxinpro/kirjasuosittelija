@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-container">
    <h1>@ViewData["Title"]</h1>

    <form method="post" class="login-form">
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" id="loginEmail" />
            <span asp-validation-for="Input.Email" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" type="password" id="loginPassword" />
            <span asp-validation-for="Input.Password" class="validation-error"></span>
        </div>

        <button type="submit" class="login-button">Login</button>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error-message">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }
    </form>
</div>
